{% extends '/common/app.html.twig' %}

{% block title %}Kompanija{% endblock %}

{% block content %}

    <div class="row" style="height: 20px"></div>

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Kompanija</h1>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-6">

            <table class="table">
                <tbody>
                <tr>
                    <th>Naziv</th>
                    <td>
                        {{ company.name }}
                    </td>
                </tr>
                <tr>
                    <th>PDV broj</th>
                    <td>{{ company.pdvNumber }}</td>
                </tr>
                <tr>
                    <th>Odgovorna osoba</th>
                    <td>{{ company.inChargePerson }}</td>
                </tr>
                <tr>
                    <th>Broj telefona</th>
                    <td>{{ company.phoneNumber }}</td>
                </tr>
                <tr>
                    <th>Broj faksa</th>
                    <td>{{ company.faxNumber }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ company.email }}</td>
                </tr>
                <tr>
                    <th>Tip</th>
                    <td>{{ company.typeName }}</td>
                </tr>
                <tr>
                    <th>Datum kreiranja</th>
                    <td>{{ company.createdAt ? company.createdAtFormatted }}</td>
                </tr>
                <tr>
                    <th>Datum promjene</th>
                    <td>{{ company.updatedAt ? company.updatedAtFormatted }}</td>
                </tr>
                </tbody>
            </table>

            <div class="col-lg-12" style="margin:15px 0;">
                <a href="{{ path('admin_company_edit', {'id': company.id}) }}">
                    <button type="button" class="btn btn-info">Uredi</button>
                </a>
            </div>

        </div>

    </div>

{% endblock %}
