{% extends '/common/app.html.twig' %}

{% block title %}Kompanije{% endblock %}

{% block content %}

    <div class="row" style="height: 20px"></div>

    {% include 'common/app_stats.html.twig' %}

    {% include 'common/table_download_links.html.twig' %}

    {% include 'userbkp/filters.html.twig' %}

    <div class="row">

        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-heading">Kompanije</div>
                <div class="panel-body">

                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Naziv</th>
                            <th>PDV broj</th>
                            <th>Tip</th>
                            <th>Odgovorna osoba</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for company in companies %}
                            <tr>
                                <td>{{ company.name }}</td>
                                <td>{{ company.pdvNumber }}</td>
                                <td>{{ company.typeName }}</td>
                                <td>{{ company.inChargePerson }}</td>
                                <td class="text-right">
                                    <a href="{{ path('admin_company_show', {'id': company.id}) }}">
                                        <button type="button" class="btn btn-sm btn-info">Otvori</button>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                                {% include 'common/table_noresults.html.twig' %}
                        {% endfor %}
                        </tbody>
                    </table>

                    <div class="navigation text-center">
                        {{ knp_pagination_render(companies) }}
                    </div>


                    <a href="{{ path('admin_company_new') }}">
                        <button type="button" class="btn btn-info s-create-new-btn">Kreiraj</button>
                    </a>

                </div>
            </div>
        </div>



    </div>
{% endblock %}
