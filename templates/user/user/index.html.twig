{% extends '/common/app.html.twig' %}

{% block title %}Korisnici{% endblock %}

{% block content %}

    <div class="row" style="height: 20px"></div>

    {% include 'common/app_stats.html.twig' %}

    {% include 'common/table_download_links.html.twig' %}

    {% include 'userbkp/filters.html.twig' %}

    <div class="row">

        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-heading">Korisnici</div>
                <div class="panel-body">

                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Ime</th>
                            <th>Prezime</th>
                            <th>Kompanija</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.firstName }}</td>
                                <td>{{ user.lastName }}</td>
                                <td>{{ user.companyName }}</td>
                                <td class="text-right">
                                    <a href="{{ path('admin_user_show', {'id': user.id}) }}">
                                        <button type="button" class="btn btn-sm btn-info">Otvori</button>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            {% include 'common/table_noresults.html.twig' %}
                        {% endfor %}
                        </tbody>
                    </table>

                    <div class="navigation text-center">
                        {{ knp_pagination_render(users) }}
                    </div>


                    <a href="{{ path('admin_user_new') }}">
                        <button type="button" class="btn btn-info s-create-new-btn">Kreiraj</button>
                    </a>

                </div>
            </div>

        </div>



    </div>
{% endblock %}