{% extends '/common/app.html.twig' %}

{% block title %}Korisnici{% endblock %}

{% block content %}
    <h1>Korisnici</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Ime</th>
                <th>Prezime</th>
                <th>Roles</th>
                <th>Šifra</th>
                <th>Datum Rođenja</th>
                <th>Sex</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.birthDate ? user.birthDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.sex ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">Prikaži</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Uredi</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Napravi novog</a>
{% endblock %}
