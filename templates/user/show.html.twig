{% extends '/common/app.html.twig' %}

{% block title %}User{% endblock %}

{% block content %}
    <h1>Korisnik</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Ime</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Prezime</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Šifra</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Datum rođenja</th>
                <td>{{ user.birthDate ? user.birthDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Sex</th>
                <td>{{ user.sex ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">nazad na listu</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
