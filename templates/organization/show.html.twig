{% extends '/common/app.html.twig' %}

{% block title %}Kompanija{% endblock %}

{% block content %}

    <div class="row" style="height: 20px"></div>

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Organizacija</h1>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-6">

            <table class="table">
                <tbody>
                <tr>
                    <th>Naziv</th>
                    <td>
                        {{ organization.name }}
                    </td>
                </tr>
                <tr>
                    <th>Broj telefona</th>
                    <td>{{ organization.phoneNumber }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ organization.email }}</td>
                </tr>
                <tr>
                    <th>Grad</th>
                    <td>{{ organization.city }}</td>
                </tr>
                <tr>
                    <th>Adresa</th>
                    <td>{{ organization.address }}</td>
                </tr>


                </tbody>
            </table>

            <div class="col-lg-12" style="margin:15px 0;">
                <a href="{{ path('organization_edit', {'id': organization.id}) }}">
                    <button type="button" class="btn btn-info">Uredi</button>
                </a>
            </div>

        </div>

    </div>

{% endblock %}
