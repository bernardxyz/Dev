{% extends '/common/app.html.twig' %}

{% block title %}Kompanije{% endblock %}

{% block content %}

    <div class="row" style="height: 20px"></div>


    {% include 'common/table_download_links.html.twig' %}

    {% include 'common/filters.html.twig' %}

    <div class="row">

        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-heading">Organizacije</div>
                <div class="panel-body">

                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Email</th>
                            <th>PhoneNumber</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for organization in organizations %}
                            <tr>
                                <td>{{ organization.name }}</td>
                                <td>{{ organization.address }}</td>
                                <td>{{ organization.email }}</td>
                                <td>{{ organization.phoneNumber }}</td>
                                <td class="text-right">
                                    <a href="{{ path('organization_show', {'id': organization.id}) }}">
                                        <button type="button" class="btn btn-sm btn-info">Otvori</button>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            {% include 'common/table_noresults.html.twig' %}
                        {% endfor %}
                        </tbody>
                    </table>

                    <a href="{{ path('organization_new') }}">
                        <button type="button" class="btn btn-info s-create-new-btn">Kreiraj</button>
                    </a>

                </div>
            </div>
        </div>



    </div>
{% endblock %}


