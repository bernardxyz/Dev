<div class="panel panel-container" style="padding: 10px">

    <div class="row">

        {% if filters.startDate is defined %}
            <div class="col-xs-6 col-md-3 col-lg-3">
                <div class="form-group">
                    <label>Početni datum</label>
                    <input class="form-control s-filter-form s-filter-text-input" data-provide="datepicker" placeholder="-- Odaberi početni datum --" name="startDate">
                </div>
            </div>
        {% endif %}

        {% if filters.endDate is defined %}
            <div class="col-xs-6 col-md-3 col-lg-3">
                <div class="form-group">
                    <label>Završni datum</label>
                    <input class="form-control s-filter-form s-filter-text-input" data-provide="datepicker" placeholder="-- Odaberi završni datum --" name="endDate">
                </div>
            </div>
        {% endif %}

        {% if filters.days is defined %}
            <div class="col-xs-6 col-md-3 col-lg-3">
                <div class="form-group">
                    <label>{{ 'filter_day'|trans }}</label>
                    <select class="form-control s-filter-form" name="day">
                        <option value="" selected class="default_item_dropdown">-- {{ 'filter_day_def_item'|trans }} --</option>
                        {% for key, value in filters.days %}
                            <option value="{{ key }}">{{ value }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        {% endif %}

        {% if filters.statuses is defined %}
            <div class="col-xs-6 col-md-3 col-lg-3">
                <div class="form-group">
                    <label>{{ 'filter_status'|trans }}</label>
                    <select class="form-control s-filter-form" name="status">
                        <option value="" selected class="default_item_dropdown">-- {{ 'filter_status_def_item'|trans }} --</option>
                        {% for single in filters.statuses %}
                            <option value="{{ single.id }}">{{ single.name|trans }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        {% endif %}

        {% if filters.products is defined %}
            <div class="col-xs-6 col-md-3 col-lg-3">
                <div class="form-group">
                    <label>Proizvod</label>
                    <select class="form-control s-filter-form" name="product">
                        <option value="" selected class="default_item_dropdown">-- Odaberi proizvod --</option>
                        {% for single in filters.products %}
                            <option value="{{ single.id }}">{{ single.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        {% endif %}

        {% if filters.months is defined %}
            <div class="col-xs-6 col-md-3 col-lg-3">
                <div class="form-group">
                    <label>Mjesec</label>
                    <select class="form-control s-filter-form" name="month">
                        <option value="" selected class="default_item_dropdown">-- Odaberi mjesec --</option>
                        {% for key, value in filters.months %}
                            <option value="{{ value }}">{{ key }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        {% endif %}

        {% if filters.years is defined %}
            <div class="col-xs-6 col-md-3 col-lg-3">
                <div class="form-group">
                    <label>Godina</label>
                    <select class="form-control s-filter-form" name="year">
                        <option value="" selected class="default_item_dropdown">-- Odaberi godinu --</option>
                        {% for key, value in filters.years %}
                            <option value="{{ value }}">{{ key }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        {% endif %}

        {% if filters.statusArr is defined %}
            <div class="col-xs-6 col-md-3 col-lg-3">
                <div class="form-group">
                    <label>Status</label>
                    <select class="form-control s-filter-form" name="status">
                        <option value="" selected class="default_item_dropdown">-- Odaberi status --</option>
                        {% for key, value in filters.statusArr %}
                            <option value="{{ value }}">{{ key }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        {% endif %}

        {% if filters.types is defined %}
            <div class="col-xs-6 col-md-3 col-lg-3">
                <div class="form-group">
                    <label>{{ 'filter_type'|trans }}</label>
                    <select class="form-control s-filter-form" name="type">
                        <option value="" selected class="default_item_dropdown">-- {{ 'filter_type_def_item'|trans }} --</option>
                        {% for single in filters.types %}
                            <option value="{{ single.id }}">{{ single.name|trans }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        {% endif %}

        {% if filters.typesArr is defined %}
            <div class="col-xs-6 col-md-3 col-lg-3">
                <div class="form-group">
                    <label>Tip</label>
                    <select class="form-control s-filter-form" name="type">
                        <option value="" selected class="default_item_dropdown">-- Odaberi tip --</option>
                        {% for key, value in filters.typesArr %}
                            <option value="{{ value }}">{{ key }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        {% endif %}

        {% if filters.sex is defined %}
            <div class="col-xs-6 col-md-3 col-lg-3">
                <div class="form-group">
                    <label>Spol</label>
                    <select class="form-control s-filter-form" name="sex">
                        <option value="" selected class="default_item_dropdown">-- Odaberi tip --</option>
                        {% for key, value in filters.sex %}
                            <option value="{{ value }}">{{ key }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        {% endif %}

        <div class="col-xs-6 col-md-3 col-lg-3">
            <div class="form-group">
                <label>Pretraži</label>
                <input type="text" class="form-control s-filter-form s-filter-text-input" name="search" placeholder="-- Pretraži --">
            </div>
        </div>

    </div><!--/.row-->
</div>